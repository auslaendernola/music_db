<h1>Songs</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th colspan="3" class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @songs.order('title').each do |song| %>
      <tr>
        <td>
          <%= song.title %>
        </td>
        <td>
          <%= song.artist.try(:name) %>
        </td>
        <td class="text-center">
          <%= link_to fa_icon('eye', text: 'Show'), song, class: 'btn btn-xs btn-default' %>
        </td>
        <td class="text-center">
          <%= link_to fa_icon('pencil', text: 'Edit'), edit_song_path(song), class: 'btn btn-xs btn-info' %>
        </td>
        <td class="text-center">
          <%= link_to fa_icon('trash-o', text: 'Delete'), song, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div>
    <%= link_to 'New Song', new_song_path, class: 'btn btn-sm btn-success' %>
</div>
